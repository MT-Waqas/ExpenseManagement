@model ExpenseManagement.Models.BLs.SubExpenseHead

@{
    ViewBag.Title = "SubExpenseHead";
}
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SubExpenseHead</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubExpenseHeadID)

        <div class="form-group">
            @Html.LabelFor(model => model.ExpenseHeadName, htmlAttributes: new { @class = "control-label col-md-2" })
            @{var list = new SelectList(ExpenseManagement.Models.BLs.BL_Expense_Head.GetHeads(), "ExpensHeadID", "ExpenseHeadName"); }
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ExpenseHeadID, @list as SelectList, "Select the Heads", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExpenseHeadID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SubExpenseHeadName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubExpenseHeadName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubExpenseHeadName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SubExpenseStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SubExpenseStatus, new List<SelectListItem>{new SelectListItem{Text="Active",Value="1"},
           new SelectListItem{Text="InActive",Value="2"}}, "Select the Status", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubExpenseStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
        <div class="ml-3">
            <a href='@Url.Action("SubExpenseHeads")' class="btn btn-outline-primary"><i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
}
