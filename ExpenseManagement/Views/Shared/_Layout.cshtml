                @Html.ActionLink("Expense Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="nav navbar-nav" style="color:white">
                   
                    <li class="dropdown">
                        <button href="#" data-toggle="dropdown" class="btn dropdown-toggle">Pages</button>
                        <ul class="dropdown-menu">
                            
                            <li  >@Html.ActionLink("ExpenseHead", "Index", "ExpenseHead","",new {@class="dropdown-item"})</li>
                            <li  >@Html.ActionLink("SubExpenseHead", "SubExpenseHeads", "SubExpenseHead","",new {@class="dropdown-item"})</li>
                            <li  >@Html.ActionLink("Expense", "ExpenseList", "Expenses","",new {@class="dropdown-item"})</li>
                            <li ><a href="/Filter_Expenses/FilterExpenses" class="dropdown-item">Filter Expenses</a></li>
                            <li  >@Html.ActionLink("User", "UserList", "User","",new {@class="dropdown-item"})</li>
                            <li  >@Html.ActionLink("About", "About", "Home","",new {@class="dropdown-item"})</li>
